function categoriaDePersonajeConMayorPoderMágico(){
/*
        Proposito:Describe la categoria del personaje con mayor poder magico de Gobwarts
        Precondicion:Ninguno
        Tipo:Numero
    */
    IrAPrimeraCeldaEnUnRecorridoAl_Y_(Este,Norte)
    categoriaPersonajeActual := minCategoria()
    categoriaConMayorPoderPorAhora := poderMagicoTotalDeLos_(categoriaPersonajeActual())
    while ( categoriaPersonajeActual/= maxCategoria()) {
        categoriaPersonajeActual  := siguienteCategoria_(categoriaPersonajeActual)
        categoriaConMayorPoderPorAhora:= máximoEntre_Y_(poderMagicoTotalDeLos_(categoriaPersonajeActual),categoriaConMayorPoderPorAhora)
    }
    return(categoriaConMayorPoderPorAhora)
}








