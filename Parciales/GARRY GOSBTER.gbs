function estáElSeñorGobscuroEnGobwarts(){
    /*
        Proposito:Indica si el señor Gobscuro se encuentra en alguna habitacion  Gobswarts
        Precondicion:
        Tipo:Booleano
        Observacion:
                        Es un recorrido de busqueda sin saber si esta
                        sobre las habitaciones de Gobwarts
                        buscando si el senor Gobscuro se encuentra en alguna mazmorra de Gobwarts
    */
    IrAPrimeraCeldaEnUnRecorridoAl_Y_(Este,Norte)
    while(not estaElSenorGobscuro() && haySiguienteCeldaEnUnRecorridoAl_Y_(Este,Norte)){
        IrASiguienteCeldaEnUnRecorridoAl_Y_(Este,Norte)
    }
    return(estaElSenorGobscuro())
}  
  
function   estaElSenorGobscuro(){
    /*
        Proposito:Indica si el señor gobscuro se encuetra habitacion actual y si esa habitacion es una mazmorra
        Precondicion:nignuna
        Tipo:Booleano
    */
    return( (tipoDeHabitación()==habitaciónMazmorras ()) &&  elSeñorGoscuroEstaOcultado())
}
  
function   elSeñorGoscuroEstaOcultado(){
/*
        Proposito:Indica Si el señor Gobscuro se encuentra en la mazmorra actual y si esta ocultando su poder magico
        Precondicion:Debe estar sobre una habitacion tipo Mazmorra
        Tipo:Booleano
   */
    return( hayPersonajeDeCategoría_(categoríaMortifago) && poderMágicoDelPersonaje() ==1)
}
  
