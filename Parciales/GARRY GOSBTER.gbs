function poderMagicoTotalDeLos_(*categoriaPersonaje*){
     /*
        Proposito:Describe el poder total de todos los magos de Gobwarts
        Precondicion: ninguno
        Tipo:Numero
        Parametros: *categoriaPersonaje*:Numero - Es el numero que representa a los distintos tipos de personajes de que puede ahber en la celda actual 
        Observacion:
                        Es un recorrido de acumulacion en direccion hacia el norte y este de la habitacion actual
                        sobre las habitaciones de Gobwarts
                        acumulando el poder magico del personaje *categoriaPersonaje*  que se encuentra en cada habitacion de Gobwarts.
    */
    IrAPrimeraCeldaEnUnRecorridoAl_Y_(Este,Norte)
    poderMagicoAlMomento := poderDelMagicoDe__DeLaHabitacionActual(categoriaPersonaje)
    while(haySiguienteCeldaEnUnRecorridoAl_Y_(Este,Norte)){
        IrASiguienteCeldaEnUnRecorridoAl_Y_(Este,Norte)
        poderMagicoAlMomento := poderMagicoAlMomento + poderDelMagicoDe__DeLaHabitacionActual(categoriaPersonaje)
    }
    return(poderMagicoAlMomento)
}
function poderDelMagicoDe_SiNoCero(categoriaPersonaje){
    /*
        Proposito:Describe el poder magico del eprsonaje *categoriaPersonaje* de la habitacion actual
        Precondicion:*categoriaPersonaje* debe ser un numero
        Tipo:Numero
    */
    return(choose  poderMágicoDelPersonaje() when(hayPersonajeDeCategoría_(categoriaPersonaje))
                    0                       otherwise    
        )
}        
